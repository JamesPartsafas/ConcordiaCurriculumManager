{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentitySettings": {
    "Key": "This is my custom Secret key for authentication",
    "Issuer": "https://localhost:7282",
    "SecurityAlgorithms": "HS256",
    "Audience": "ccm-backend"
  },
  "DatabaseSettings": {
    "ConnectionString": "Host=localhost;Port=5432;Database=ConcordiaCurriculumManager;Username=postgres;Password=postgres"
  },
  "CorsSettings": {
    "AllowedWebsite": "http://localhost:4173"
  },
  "SenderEmailSettings": {
    "SenderSMTPHost": "smtp.gmail.com",
    "SenderSMTPPort": "587",
    "SenderEmail": "test@gmail.com",
    "SenderPassword": "not a valid password"
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
